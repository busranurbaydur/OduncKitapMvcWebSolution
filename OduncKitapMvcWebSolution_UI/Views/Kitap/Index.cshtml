@using OduncKitapMvcWebSolution_Business
@model List<Kitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@{

    //viewbag.hatamesajı isimli değişken dolu ise
    if (!String.IsNullOrEmpty(ViewBag.HataMesaji))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.HataMesaji

        </div>
        <br />
    }

    if (ViewBag.KitapCount == 0)
    {
        <div class="alert alert-success" role="alert">
            Kayıt bulunamadı
            <br />
        </div>
    }

    @Html.ActionLink("Yeni Kitap Ekle", "EKLE", "Kitap", null, new { @class = "btn btn-sm btn-primary", @style = "margin:5px" })

    if (ViewBag.KitapListCount > 0)
    {
        int siraNo = 0;

        if (ViewBag.Suan>1)
        {
            siraNo += (ViewBag.Suan - 1)* ViewBag.PageSize;
        }

        <table class="table table-hover">
            <tr>
                <th>Sıra No</th>
                <th>Kitap Adı</th>
                <th>Kayıt Tarihi</th>
                <th>Türü</th>
                <th>Yazarı</th>
                <th>İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@(++siraNo)</td>
            <td>@item.KitapAdi</td>
            <td>@item.KayitTarihi.ToShortDateString()</td>
            <td>@item.Turler.TurAdi</td>
            <td>@item.Yazarlar.YazarAdi  @item.Yazarlar.YazarSoyadi</td>

            <td>@Html.ActionLink("Düzenle", "Duzenle", "Kitap", new { id = item.Id }, new { @class = "btn btn-sm btn-warning", @style = "margin-right:3px" })</td>

            <td>@Html.ActionLink("Sil", "Sil", "Kitap", new { id = item.Id }, new { @class = "btn btn-sm btn-danger", @style = "margin-right:3px" })</td>

        </tr>
            }
        </table>

        <br />
        <div class="row">

            <div class="text-center">
                <ul class="pagination">
                    <li>
                        <a href="@Url.Action("Index","Kitap",new {@page=ViewBag.Suan-1 })" id="pageprevious">&laquo;</a>
                    </li>

                    @for (int i = 1; i <= (int)ViewBag.ToplamSayfa; i++)
                    {
                        <li>
                            <a href="@Url.Action("Index","Kitap",new {@page=i})">@i</a>
                        </li>
                    }
                    
                    <li>
                        <a href="@Url.Action("Index","Kitap",new {@page=ViewBag.Suan+1 })" id="pagenext">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
    }
}

@section scripts{
    <script>

        var suan =@ViewBag.Suan;
        var toplam =@ViewBag.ToplamSayfa;
        if (suan==1) {
            $("#pageprevious").removeAttr("href");
        }
        if (suan==toplam) {
            $("#pagenext").removeAttr("href");
        }
    </script>
    }