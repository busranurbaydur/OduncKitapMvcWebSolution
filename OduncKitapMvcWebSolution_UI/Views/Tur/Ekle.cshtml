@using OduncKitapMvcWebSolution_UI.Models
@model TurViewModel

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-group col-4">

    @using (Html.BeginForm("Ekle", "Tur", FormMethod.Post, new { @class = "form-horizontal", enctyp = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">

            @Html.Label("Tür Adı : ") <br /><br />
            @Html.TextBoxFor(x => x.TurAdi, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">Tür Ekle</button>
        </div>
    }
</div>