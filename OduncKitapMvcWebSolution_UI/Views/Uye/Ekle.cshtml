@using OduncKitapMvcWebSolution_UI.Models
@model UyeViewModel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ekle</h2>

<div class="form-group col-4">

    @using (Html.BeginForm("Ekle", "Uye", FormMethod.Post, new { @class = "form-horizontal", enctyp = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">

            @Html.Label("Uye Adı : ") <br /><br />
            @Html.TextBoxFor(x => x.UyeAdi, new { @class = "form-control" })

        </div>

        <div class="form-group">

            @Html.Label("Uye Soyadı : ") <br /><br />
            @Html.TextBoxFor(x => x.UyeSoyadi, new { @class = "form-control" })

        </div>
        <div class="form-group">

            @Html.Label("DoğumTarihi : ") <br /><br />
            @Html.TextBoxFor(x => x.DogumTarihi, new { @class = "form-control" })

        </div>

        <div class="form-group">

            @Html.Label("Telefon Numarası : ") <br /><br />
            @Html.TextBoxFor(x => x.TelefonNumarasi, new { @class = "form-control" })

        </div>
        <div class="form-group">

            @Html.Label("Email : ") <br /><br />
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">Üye Ekle</button>
        </div>
    }
</div>