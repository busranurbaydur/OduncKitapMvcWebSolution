@using OduncKitapMvcWebSolution_UI.Models
@model PersonelViewModel
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ekle</h2>

<div class="form-group col-4">

    @using (Html.BeginForm("Ekle", "Personel", FormMethod.Post, new { @class = "form-horizontal", enctyp = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">

            @Html.Label("Personel Adı : ") <br /><br />
            @Html.TextBoxFor(x => x.PersonelAdi, new { @class = "form-control" })

        </div>

        <div class="form-group">

            @Html.Label("Personel Soyadı : ") <br /><br />
            @Html.TextBoxFor(x => x.PersonelSoyadi, new { @class = "form-control" })

        </div>
       

        <div class="form-group">

            @Html.Label("Telefon Numarası : ") <br /><br />
            @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })

        </div>
        <div class="form-group">

            @Html.Label("Email : ") <br /><br />
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-info">Personel Ekle</button>
        </div>
    }
</div>